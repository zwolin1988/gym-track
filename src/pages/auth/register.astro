---
import AuthLayout from "@/layouts/AuthLayout.astro";
import { RegisterForm } from "@/components/auth/RegisterForm";

export const prerender = false;

// Pobieranie parametru redirectUrl z query string (jeśli istnieje)
const redirectUrl = Astro.url.searchParams.get("redirect") || "/dashboard";
---

<AuthLayout title="Rejestracja" description="Utwórz konto w Gym Track">
  <div class="space-y-6">
    <h2 class="text-center text-2xl font-bold">Utwórz konto</h2>
    <RegisterForm client:load redirectUrl={redirectUrl} />
  </div>
</AuthLayout>
