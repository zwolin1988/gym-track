---
import Layout from "@/layouts/Layout.astro";

export const prerender = false;

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/auth/login");
}
---

<Layout title="Workout Statistics - Gym Track">
  <div class="container mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold tracking-tight sm:text-4xl">Statystyki</h1>
      <p class="mt-2 text-muted-foreground">Analizuj swoje postępy treningowe</p>
    </div>

    <!-- Time Period Filter -->
    <div class="mb-6">
      <div class="inline-flex rounded-lg border bg-card p-1">
        <button class="rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground" data-period="week">
          Tydzień
        </button>
        <button class="rounded-md px-4 py-2 text-sm font-medium hover:bg-muted" data-period="month"> Miesiąc </button>
        <button class="rounded-md px-4 py-2 text-sm font-medium hover:bg-muted" data-period="year"> Rok </button>
        <button class="rounded-md px-4 py-2 text-sm font-medium hover:bg-muted" data-period="all"> Wszystko </button>
      </div>
    </div>

    <!-- Key Metrics Grid -->
    <div class="mb-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Total Workouts -->
      <div class="rounded-lg border bg-card p-6 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Treningi</p>
            <p class="mt-2 text-3xl font-bold">0</p>
            <p class="mt-1 text-xs text-muted-foreground">w tym okresie</p>
          </div>
          <span class="material-symbols-outlined text-4xl text-primary">fitness_center</span>
        </div>
      </div>

      <!-- Total Volume -->
      <div class="rounded-lg border bg-card p-6 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Objętość</p>
            <p class="mt-2 text-3xl font-bold">0 kg</p>
            <p class="mt-1 text-xs text-muted-foreground">łącznie</p>
          </div>
          <span class="material-symbols-outlined text-4xl text-primary">monitoring</span>
        </div>
      </div>

      <!-- Total Time -->
      <div class="rounded-lg border bg-card p-6 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Czas</p>
            <p class="mt-2 text-3xl font-bold">0h</p>
            <p class="mt-1 text-xs text-muted-foreground">łącznie</p>
          </div>
          <span class="material-symbols-outlined text-4xl text-primary">schedule</span>
        </div>
      </div>

      <!-- Average Duration -->
      <div class="rounded-lg border bg-card p-6 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Średni czas</p>
            <p class="mt-2 text-3xl font-bold">0 min</p>
            <p class="mt-1 text-xs text-muted-foreground">na trening</p>
          </div>
          <span class="material-symbols-outlined text-4xl text-primary">avg_time</span>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="mb-8 grid gap-6 lg:grid-cols-2">
      <!-- Workout Frequency Chart -->
      <div class="rounded-lg border bg-card p-6 shadow-sm">
        <h2 class="mb-4 text-lg font-semibold">Częstotliwość treningów</h2>
        <div class="flex h-64 items-center justify-center bg-muted/50">
          <p class="text-sm text-muted-foreground">Wykres zostanie wczytany</p>
        </div>
      </div>

      <!-- Volume Progress Chart -->
      <div class="rounded-lg border bg-card p-6 shadow-sm">
        <h2 class="mb-4 text-lg font-semibold">Postęp objętości</h2>
        <div class="flex h-64 items-center justify-center bg-muted/50">
          <p class="text-sm text-muted-foreground">Wykres zostanie wczytany</p>
        </div>
      </div>
    </div>

    <!-- Exercise Breakdown -->
    <div class="mb-8 rounded-lg border bg-card p-6 shadow-sm">
      <h2 class="mb-4 text-lg font-semibold">Najczęstsze ćwiczenia</h2>
      <div class="space-y-3">
        <!-- Exercise Item Template -->
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10">
              <span class="material-symbols-outlined text-primary">exercise</span>
            </div>
            <div>
              <h3 class="font-medium">Exercise Name</h3>
              <p class="text-xs text-muted-foreground">Category</p>
            </div>
          </div>
          <div class="text-right">
            <p class="font-semibold">15</p>
            <p class="text-xs text-muted-foreground">sesji</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Personal Records -->
    <div class="rounded-lg border bg-card p-6 shadow-sm">
      <h2 class="mb-4 text-lg font-semibold">Rekordy osobiste</h2>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <!-- PR Card Template -->
        <div class="rounded-lg border bg-muted/50 p-4">
          <h3 class="mb-1 font-medium">Exercise Name</h3>
          <p class="text-2xl font-bold text-primary">100 kg</p>
          <p class="text-xs text-muted-foreground">DD/MM/YYYY</p>
        </div>
      </div>

      <!-- Empty State -->
      <div class="rounded-lg border border-dashed bg-muted/50 p-8 text-center hidden" id="pr-empty">
        <span class="material-symbols-outlined mb-2 text-4xl text-muted-foreground">emoji_events</span>
        <p class="text-sm text-muted-foreground">Brak rekordów osobistych</p>
      </div>
    </div>

    <!-- Empty State for No Data -->
    <div class="rounded-lg border bg-card p-12 text-center shadow-sm hidden" id="no-data">
      <span class="material-symbols-outlined mb-4 text-6xl text-muted-foreground">insights</span>
      <h3 class="mb-2 text-lg font-semibold">Brak danych</h3>
      <p class="mb-6 text-sm text-muted-foreground">Ukończ treningi, aby zobaczyć statystyki</p>
      <a
        href="/workouts/start"
        class="inline-flex items-center gap-2 rounded-lg bg-primary px-6 py-3 text-sm font-medium text-primary-foreground hover:bg-primary/90"
      >
        <span class="material-symbols-outlined text-base">play_arrow</span>
        Rozpocznij trening
      </a>
    </div>
  </div>
</Layout>
